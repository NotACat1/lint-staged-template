{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-scss", "stylelint-less"],
  "rules": {
    "indentation": 2,
    "color-no-invalid-hex": true,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global"]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["include", "mixin"]
      }
    ]
  }
}
